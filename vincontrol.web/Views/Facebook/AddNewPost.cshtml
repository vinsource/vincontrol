@using System.Web.Optimization
@model vincontrol.Application.ViewModels.FacebookManagement.FacebookPostViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>VINControl | Add New Facebook Post</title>
    @Styles.Render("~/Content/themes/base/css")
    <link href="@Url.Content("~/Content/Vincontrol/facebook.css")" rel="stylesheet" type="text/css" />
    <style type="text/css">
        input#popup_ok
        {
            background-color: #003399;
            color: white;
        }

        input#popup_cancel
        {
            background: none repeat scroll 0 0 #E9EAEF;
            cursor: pointer;
        }

        #popup_container
        {
            border: solid 5px #003399;
        }

        #popup_title
        {
            background-color: #003399;
            color: white;
        }

        #ui-datepicker-div
        {
            font-size: 13px;
        }
    </style>

    <script src="~/js/jquery-1.6.4.min.js"></script>
    <script src="~/js/jquery-ui-1.8.16.custom.min.js"></script>
    <script src="~/js/jquery.blockUI.js"></script>
    <script src="~/js/jquery.alerts.js"></script>
    <link href="@Url.Content("~/js/fancybox/jquery.fancybox-1.3.4.css")" rel="stylesheet" type="text/css" />
    <script src="~/js/fancybox/jquery.fancybox-1.3.4.js"></script>
    <script src="~/js/fancybox/jquery.easing-1.3.pack.js"></script>
    <script src="~/js/fancybox/jquery.mousewheel-3.0.4.pack.js"></script>
    <script src="~/js/Utility.js"></script>
    <script type="text/javascript">
        var readyToSubmit = true;
        var message = "";
        var waitingImage = '@Url.Content("~/Content/Images/ajaxloadingindicator.gif")';
        var postUrl = '@Url.Action("AddNewPost", "Facebook")';
        
    </script>
    <script src="@Url.Content("~/js/VinControl/facebook/addNewPostInitialization.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/jquery.form.min.js")" type="text/javascript"></script>
</head>
<body style="overflow: hidden; height: 490px;">
    <form id="post-form" action="@Url.Action("AddNewPost", "Facebook")" method="post" enctype="multipart/form-data">
        <input type="hidden" id="InventoryId" name="InventoryId" value="@Model.InventoryId" />
        <input type="hidden" id="InventoryStatus" name="InventoryStatus" value="@Model.InventoryStatus" />
        <input type="hidden" id="DealerId" name="DealerId" value="@Model.DealerId" />
        <input type="hidden" id="UserId" name="UserId" value="@Model.UserId" />
        <input type="hidden" id="LocationId" name="LocationId" value="@Model.LocationId" />
        <input type="hidden" id="LocationName" name="LocationName" value="@Model.LocationName" />
        <input type="hidden" id="SharedWithId" name="SharedWithId" value="1" />
        <input type="hidden" id="Picture" name="Picture" value="@Model.Picture" />
        <input type="hidden" id="PublishDateHidden" name="PublishDateHidden" />
        <input type="hidden" id="PublishDate" name="PublishDate" value="@Model.PublishDate.ToString("MM/dd/yyyy HH:mm:ss tt")"/>
        <div class="popup-wrap">
            <div class="fb-popup-controls" style="display: inline-block; width: 98%;">
                <div class="label">
                    Date: @Model.PublishDate.ToString("MM/dd/yyyy HH:mm:ss tt")
                </div>
              
            </div>
            <div id="fb_post_icons">
                <span class="fb_post_icon" id="fb_location" title="Add a location to post" style="float: left; margin-right: 0px;"></span>
                <span id="fb_location_name"></span>
                <span class="fb_post_icon" id="fb_file" title="Choose a file to upload"></span>
                <span id="fb_photo_name"></span>
            </div>
            
            <div id="fb_location_search">
                <input id="fb_location_input" type="text" placeholder="Where are you?" value="@Model.LocationName" />
            </div>
            <div id="fb_file_input_area">
                <input id="fb_file_input" type="file" name="attachedFile" />
            </div>

            <div class="fb-popup-postbox">
                
                <textarea id="Content" name="Content" placeholder="Enter Your Post Here!">@Html.Raw(Model.Content)</textarea>
                <div>
                    <div class="label" style="width: 80px; float: left; margin-top: 5px;">
                        Article URL:
                    </div>
                    <input type="text" id="Link" name="Link" maxlength="500" style="padding: 2px; width: 82%;" value="@Model.Link"/>
                </div>
                <div class="fb-controls">                    
                    <div class="fb-btn cancel right" id="divCancel">
                        Cancel
                    </div>
                    <div class="fb-btn save right" id="divSave">
                        Post
                    </div>
                    <div class="fb-dropdown restriction right">
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
</html>
